<UserControl
    x:Class="DataTools.WinUI.ColorControls.ColorElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DataTools.WinUI.ColorControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    AllowFocusOnInteraction="True"
    FontFamily="Consolas"
    FontSize="20"
    FontWeight="Bold"
    Foreground="{ThemeResource ButtonForegroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid"
        PointerPressed="Grid_PointerPressed"
        PointerReleased="Grid_PointerReleased"
        PointerMoved="Grid_PointerMoved">

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image
                Canvas.Left="0"
                Canvas.Top="0"
                x:Name="PickerSite"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        <!--<Canvas
            Grid.Row="0"
            Grid.Column="0"
            x:Name="PickerCanvas"
            HorizontalAlignment="Stretch"
            Scale="1"
            VerticalAlignment="Stretch">


        </Canvas>-->

    </Grid>
</UserControl>
